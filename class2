<script>
			var weekday = new Date().getDay()
			$("ul li:nth-child("+weekday+")").addClass("current-day");
</script>
<style>
*{
			box-sizing: border-box;
		}


		.module{
			width: 220px;
			padding: 1rem;
			margin: 1rem;
		}

		li{
			list-style: none;
			text-align: center;
		}

		.current-day:after{
			content: "}";
			margin-left: 20px;
		}
		.current-day:before{
			content: "{";
			margin-right: 20px;
		}
</style>

